{
  "name": "@lazorkit/wallet",
  "version": "1.5.4",
  "description": "Lazorkit Wallet SDK for Solana",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/web3.js": "^1.98.2",
    "bs58": "^6.0.0",
    "buffer": "^6.0.3",
    "eventemitter3": "^5.0.1",
    "js-sha256": "^0.11.0",
    "zustand": "^5.0.5"
  },
  "peerDependencies": {
    "react": "^18.3.1 || ^19.0.0",
    "react-dom": "^18.3.1 || ^19.0.0"
  },
  "devDependencies": {
    "@types/bs58": "^5.0.0",
    "@types/node": "^24.0.0",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
