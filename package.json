{
  "name": "lazor-kit-react-sdk",
  "version": "0.1.2",
  "description": "React SDK for Lazor Kit - A Solana Smart Wallet Solution with Passkey Support",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "files": [
    "dist",
    "src/sdk/idl",
    "src/**/*.json",
    "src/**/*.css"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "prepare": "npm run build",
    "test": "jest",
    "lint": "eslint src/**/*.{ts,tsx}",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "keywords": [
    "solana",
    "web3",
    "blockchain",
    "smart-wallet",
    "passkey",
    "react",
    "ipfs"
  ],
  "author": "Lazor Kit",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lazor-kit/react-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/lazor-kit/react-sdk/issues"
  },
  "homepage": "https://github.com/lazor-kit/react-sdk#readme",
  "dependencies": {
    "@coral-xyz/anchor": "^0.28.0",
    "@rollup/plugin-json": "^6.1.0",
    "@solana/web3.js": "^1.87.6",
    "bs58": "^5.0.0",
    "buffer": "^6.0.3",
    "process": "^0.11.10",
    "rollup-plugin-postcss": "^4.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  }
}